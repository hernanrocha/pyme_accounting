<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model='ir.ui.view' id='account_tag_tree'>
        <field name='name'>Cuentas Analíticas</field>
        <field name="model">account.account.tag</field>
        <field name='arch' type='xml'>
            <tree>
                <field name="name" />
                <field name="applicability" />
            </tree>
        </field>
    </record>

    <record model='ir.ui.view' id='account_document_type_tree'>
        <field name='name'>Tipos de Comprobante</field>
        <field name="model">account.document.type</field>
        <field name='arch' type='xml'>
            <tree>
                <field name="code" />
                <field name="name" />
                <field name="document_letter_id" />
                <field name="internal_type" />
                <field name="doc_code_prefix" />
                <field name="localization" />
                <field name="validator_id" />
                <field name="purchase_cuit_required" />
                <field name="purchase_alicuots" />
            </tree>
        </field>
    </record>

    <record model='ir.ui.view' id='afip_responsability_type_tree'>
        <field name='name'>Tipos de Responsabilidad AFIP</field>
        <field name="model">afip.responsability.type</field>
        <field name='arch' type='xml'>
            <tree>
                <field name="code" />
                <field name="name" />
                <field name="company_requires_vat" />
                <field name="active" />
            </tree>
        </field>
    </record>

    <record model='ir.ui.view' id='partner_id_category_tree'>
        <field name='name'>Tipos de Documento</field>
        <field name="model">res.partner.id_category</field>
        <field name='arch' type='xml'>
            <tree>
                <field name="code" />
                <field name="name" />
                <field name="afip_code" />
            </tree>
        </field>
    </record>

    <record model='ir.ui.view' id='account_account_tree'>
        <field name='name'>account.account.tree</field>
        <field name="model">account.account</field>
        <field name='arch' type='xml'>
            <tree editable="top">
                <field name="code" />
                <field name="name" />
                <!-- TODO: investigar este parametro -->
                <!-- <field name="centralized" />  -->
                <field name="user_type_id" />
                <field name="internal_type" />
                <!-- <field name="internal_group" /> -->
                <field name="tax_ids" />
                <field name="tag_ids" />
                <field name="reconcile" />
                <field name="partida_monetaria" widget="boolean_switch" />
            </tree>
        </field>
    </record>

    <record id="inflation_adjustment_index_tree" model="ir.ui.view">
        <field name="name">inflation.adjustment.index.tree</field>
        <field name="model">inflation.adjustment.index</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="date"/>
                <field name="value"/>
                <field name="xml_id" groups="base.group_no_one"/>
            </tree>
        </field>
    </record>

    <record id="inflation_adjustment_index_search" model="ir.ui.view">
        <field name="name">inflation.adjustment.index.search</field>
        <field name="model">inflation.adjustment.index</field>
        <field name="arch" type="xml">
            <search string="Search Description">
                <field name="date"/>
            </search>
        </field>
    </record>

    <!-- TODO: mover a archivo diferente -->
    <record id="ejercicios_fiscales_tree" model="ir.ui.view">
        <field name="name">fiscal.year.tree</field>
        <field name="model">date.range</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="date_start" string="Fecha Desde" />
                <field name="date_end" string="Fecha Hasta" />
                <!-- TODO: abierto/cerrado -->
                <!-- <field name="status" /> -->
            </tree>
        </field>
    </record>

    <record id="ejercicios_fiscales_form" model="ir.ui.view">
        <field name="name">fiscal.year.form</field>
        <field name="model">date.range</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" />
                    <field name="date_start" string="Fecha Desde" />
                    <field name="date_end" string="Fecha Hasta" />

                    <!-- Configuracion -->
                    <field name="journal_id" />
                    <field name="refundicion_account_id" />
                    <field name="last_closure_move_id" />

                    <!-- TODO: agrupar por account.group -->
                    <!-- TODO: configurar account.group en plan contable -->

                    <!-- Asientos Generados -->
                    <field name="open_move_id" />
                    <field name="refundicion_move_id" />
                    <field name="closure_move_id" />
                </group>
                <button name="generar_apertura" string="Apertura" 
                    type="object" default_focus="1" class="oe_highlight"/>
                <button name="generar_refundicion" string="Refundición" 
                    type="object" class="oe_highlight"/>
            </form>
        </field>
    </record>

</odoo>