    <record id="action_nano_tables_account_account" model="ir.actions.act_window">
        <field name="name">Plan de Cuentas</field>
        <field name="res_model">account.account</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="account_account_tree" />
        <field name="target">main</field>
    </record>

    <menuitem name="Plan de Cuentas" sequence="5" parent="menu_nano_tables"
        id="menu_nano_tables_account_account" action="action_nano_tables_account_account" />

</odoo>