    <record id="action_nano_tables_partner_id_category" model="ir.actions.act_window">
        <field name="name">Tipos de Documento</field>
        <field name="res_model">res.partner.id_category</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="partner_id_category_tree" />
        <field name="target">main</field>
