<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model='ir.ui.view' id='agente_agip_wizard_form'>
        <field name='name'>Reporte AGIP</field>
        <field name="model">l10n_ar.agente.agip.wizard</field>
        <field name='arch' type='xml'>
            <form>
                <field name="type" invisible="1"/>
                <header>
                    <!-- <button name="action_present" string="Presentar" states="draft" type="object" class="oe_highlight"/>
                    <button name="action_cancel" string="Cancelar" states="draft,presented" type="object"/>
                    <button name="action_to_draft" string="Cambiar a Borrador" states="cancel" type="object"/> -->
                    <field name="state" widget="statusbar" statusbar_visible="draft,presented"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="company_id" widget="selection" groups="base.group_multi_company" invisible="1" />
                            <field name="name" />
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Archivos" name="files">
                            <button name="generate" class="btn btn-primary" type="object" string="Generar Informacion" states="draft"/>
                            <group>
                                <field name="agip_cbtes_filename" invisible="1"/>
                                <group>
                                    <field name="agip_cbtes_file" filename="agip_cbtes_filename"/>
                                    <field name="AGIP_CBTES" />
                                </group>
                            </group>
                        </page>
                        <page string="Comprobantes" name="invoices">
                            <field name="invoice_ids">
                                <tree default_order="date_invoice">
                                    <field name="state" invisible="1"/>
                                    <field name="date"/>
                                    <field name="name"/>
                                    <field name="partner_id" />
                                </tree>
                            </field>
                        </page>
                        <page string="Notas" name="notes">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- groups="account.group_account_readonly,account.group_account_invoice" -->
    <menuitem name="Nanosoftware"
        id="menu_nano"
        web_icon="account,static/description/icon.png"
        sequence="45">
    </menuitem>    

    <!-- Menu Ingresos Brutos -->
    <menuitem name="Ingresos Brutos" sequence="1" parent="menu_nano" id="menu_nano_iibb" />

    <record id="action_nano_iibb_agip" model="ir.actions.act_window">
        <field name="name">AGIP</field>
        <field name="res_model">l10n_ar.agente.agip.wizard</field>
        <field name="view_mode">list,form</field>
        <field name="target">main</field>
    </record>

    <menuitem name="AGIP" sequence="1" parent="menu_nano_iibb"
        id="menu_nano_iibb_agip" action="action_nano_iibb_agip" />

    <!-- Menu Tablas -->
    <menuitem name="Tablas" sequence="100" parent="menu_nano" id="menu_nano_tables" />

    <record id="action_nano_tables_account_tags" model="ir.actions.act_window">
        <field name="name">Cuentas Analíticas</field>
        <field name="res_model">account.account.tag</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="account_tag_tree" />
        <field name="target">main</field>
    </record>

    <menuitem name="Cuentas Analíticas" sequence="1" parent="menu_nano_tables"
        id="menu_nano_tables_account_tags" action="action_nano_tables_account_tags" />

    <record id="action_nano_tables_document_type" model="ir.actions.act_window">
        <field name="name">Cuentas Analíticas</field>
        <field name="res_model">account.document.type</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="account_document_type_tree" />
        <field name="target">main</field>
    </record>

    <menuitem name="Tipos de Comprobante" sequence="2" parent="menu_nano_tables"
        id="menu_nano_tables_document_type" action="action_nano_tables_document_type" />

    <record id="action_nano_tables_afip_responsability_type" model="ir.actions.act_window">
        <field name="name">Tipos de Responsabilidad AFIP</field>
        <field name="res_model">afip.responsability.type</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="afip_responsability_type_tree" />
        <field name="target">main</field>
    </record>

    <menuitem name="Tipos de Responsabilidad AFIP" sequence="3" parent="menu_nano_tables"
        id="menu_nano_tables_afip_responsability_type" action="action_nano_tables_afip_responsability_type" />

    <record id="action_nano_tables_partner_id_category" model="ir.actions.act_window">
        <field name="name">Tipos de Documento</field>
        <field name="res_model">res.partner.id_category</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="partner_id_category_tree" />
        <field name="target">main</field>
    </record>

    <menuitem name="Tipos de Documento" sequence="4" parent="menu_nano_tables"
        id="menu_nano_tables_partner_id_category" action="action_nano_tables_partner_id_category" />

</odoo>